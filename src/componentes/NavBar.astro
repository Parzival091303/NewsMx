<style>
    /* NAVBAR */
    .navbar {
        background-color: #009999;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 3rem 2rem;
        color: white;
    }

    .logo {
        flex: 1;
        font-size: 2.2rem;
        font-weight: bold;
        letter-spacing: 2px;
    }

    .menu {
        flex: 2;
        display: flex;
        justify-content: center;
        gap: 2rem;
    }

    .menu a {
        color: white;
        text-decoration: none;
        font-weight: 500;
        padding: 0.5rem;
        transition: color 0.3s ease;
    }

    .menu a:hover {
        color: #ffd700;
    }

    .user-icon svg {
        width: 28px;
        height: 28px;
        fill: white;
    }

    .hamburger {
        display: none;
        font-size: 2rem;
        cursor: pointer;
        color: white;
    }

    @media (max-width: 768px) {
        .menu {
            display: none;
            flex-direction: column;
            background-color: #007777;
            position: absolute;
            top: 100px;
            right: 0;
            width: 220px;
            padding: 1rem;
        }
        .menu.active {
            display: flex;
        }
        .hamburger {
            display: block;
        }
    }
</style>

<script>
    const hamburger = document.querySelector(".hamburger");
    const menu: HTMLElement = document.querySelector(".menu") as HTMLElement;
    hamburger?.addEventListener("click", () => {
        menu.classList.toggle("active");
    });
</script>
